<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/update_store">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/myStoreImage"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <info.hoang8f.widget.FButton
                    android:id="@+id/btnStoreSelectImageUpdate"
                    android:text="Select"
                    android:textColor="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <info.hoang8f.widget.FButton
                    android:id="@+id/btnStoreUploadImageUpdate"
                    android:text="Upload"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Store Id: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:visibility="invisible"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/myStoreId"
                    android:textStyle="bold"
                    android:text="Store Id"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Store Name: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/myStoreName"
                    android:textStyle="bold"
                    android:text="Store Name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Store Location: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/myStoreLocation"
                    android:text="Store Location"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Contact Number: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/myStoreContactNumber"
                    android:text="Store Contact Number"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Store Delivery: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/myStoreDelivery"
                    android:text="Store Delivery"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </EditText>

            </LinearLayout>

            <Button
                android:id="@+id/btnStoreUpdate"
                android:layout_marginTop="15dp"
                android:text="Update Store Details"
                android:background="@android:color/holo_orange_light"
                android:layout_width="350dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </Button>

        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>


